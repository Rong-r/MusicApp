    <View
        android:id="@+id/list_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        app:layout_constraintTop_toBottomOf="@+id/layout_list_top"
        app:layout_constraintBottom_toTopOf="@+id/layout_list_cover"/>
    <LinearLayout
        android:id="@+id/layout_list_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/list_top_line"
        app:layout_constraintBottom_toTopOf="@+id/list_line2">
        <ImageView
            android:id="@+id/iv_list_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/music_icon"/>
        <TextView
            android:id="@+id/tv_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="歌单名称"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"/>
    </LinearLayout>
    <View
        android:id="@+id/list_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        app:layout_constraintTop_toBottomOf="@+id/layout_list_cover"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_list"/>
