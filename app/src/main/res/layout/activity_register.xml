<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_register"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"/>

    <LinearLayout
        android:id="@+id/layout_register_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/iv_register"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_register_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_register_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/login_edit_text_shape"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/layout_register_user_name"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/login_edit_text_shape"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/layout_user_password"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_password_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_register_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_edit_text_shape"
            android:singleLine="true" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/layout_confirm_password"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:text="注        册"
        android:textSize="20sp"
        />

</RelativeLayout>