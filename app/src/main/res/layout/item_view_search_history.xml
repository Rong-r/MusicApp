<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/item_view_home_list_shape">
    <ImageView
        android:id="@+id/iv_search_history_loge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/search_history"/>
    <TextView
        android:id="@+id/tv_search_history_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_search_history_loge"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="搜索结果-歌名"
        android:textSize="17sp"/>
    <ImageView
        android:id="@+id/iv_search_history_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/search_history_delete"/>
</RelativeLayout>